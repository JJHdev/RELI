<!-- 비밀번호 찾기 -->
<div id="popupFindPassword" class="layerPop form type4">
    <div class="layerWrap">
        <div class="layerPop-inner systemLayer">
       		<form id="popupForm1" name="popupForm1" method="post" onsubmit="return false;" class="app-off">
				<div class="inputGroup">
					<p>사용자ID</p>
					<div class="inputWrap">
						<input id="p_userId" name="userId" type="text" placeholder="사용자ID를 입력하세요." />
					</div>
				</div>
				<div class="inputGroup">
					<p>이름</p>
					<div class="inputWrap">
						<input id="p_userNm" name="userNm" type="text" placeholder="이름을 입력하세요." />
					</div>
				</div>
				<div class="inputGroup">
					<p>생년월일</p>
					<div class="inputWrap">
						<input id="p_brdt" name="brdt" type="text" placeholder="생년월일 8자리를 입력하세요." />
					</div>
				</div>
				<div class="inputGroup">
					<p>휴대전화번호 (-제외 숫자만 입력)</p>
					<div class="inputWrap call">
						<input id="p_mbtelNo" name="mbtelNo" type="text" placeholder="휴대전화번호" />
						<button id="btnSmsSend">인증요청</button>
					</div>
				</div>
			</form>
       		<form id="popupForm2" name="popupForm2" method="post" onsubmit="return false;" class="app-off">
				<div class="inputGroup">
					<p>인증번호 입력</p>
					<div class="inputWrap call">
						<input id="p_userNo" name="userNo" type="hidden" />
						<input id="p_smsNo" name="smsNo" type="text" placeholder="전송된 인증번호를 입력하세요." />
						<button id="btnSmsCert">인증확인</button>
					</div>
				</div>
			</form>
       		<form id="popupForm3" name="popupForm3" method="post" onsubmit="return false;" class="app-off">
				<div class="resuit success">
					<div class="resuit-txt"><p class="info">재설정할 비밀번호를 입력하세요.</p></div>
				</div>
				<div class="inputGroup">
					<p>비밀번호</p>
					<div class="inputWrap">
						<input type="password" id="p_pswd" name="pswd" maxlength="30" placeholder="비밀번호">
					</div>
				</div>
				<div class="inputGroup">
					<p>비밀번호 확인</p>
					<div class="inputWrap">
						<input type="password" id="p_pswdCnfm" name="pswdCnfm" maxlength="30" placeholder="비밀번호 확인">
					</div>
				</div>
				<div class="btnWrap">
					<a href="javascript:void(0);" id="btnPswdSave">비밀번호 변경</a>
				</div>
			</form>
			<div class="resuit">
				<div class="resuit-txt" id="popupPasswordResult"></div>
			</div>
			<div class="btnWrap">
				<a href="javascript:void(0);" data-dismiss="modal">취소</a>
			</div>
		</div>
    </div>
</div>
